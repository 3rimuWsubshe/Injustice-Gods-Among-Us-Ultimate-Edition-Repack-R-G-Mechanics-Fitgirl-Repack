local function math_log(x: auto, base: auto) <inline,nosideeffect>
  ## check_arithmetic(symbols.x)
  ## local suffix = symbols.x.type:is_float32() and '_f32' or '_f64'
  ## local log2, log10, log = 'log2'..suffix, 'log10'..suffix, 'log'..suffix
  ## if not symbols.base.type:is_nil() then
    if base == 2 then
      return #(log2)#(x)
    elseif base == 10 then
      return #(log10)#(x)
    else
      return #(log)#(x) / #(log)#(base)
    end
  ## else
    return #(log)#(x)
  ## end
end

local function math_deg(x: auto) <inline,nosideeffect>
  ## check_arithmetic(symbols.x)
  local factor: #[choose_float_type(symbols.x)]# <comptime> = 180 / math_pi
  return x * factor
end

local function math_rad(x: auto) <inline,nosideeffect>
  ## check_arithmetic(symbols.x)
  local factor: #[choose_float_type(symbols.x)]# <comptime> = math_pi / 180.0
  return x * factor
end

local function math_modf(x: auto) <inline,nosideeffect>
  ## check_arithmetic(symbols.x)
  ## local rettype = choose_float_type(symbols.x)
  local i: #[rettype]#
  local f: #[rettype]# <noinit>
  ## if symbols.x.type:is_float32() then
    f = modf_f32(x, &i)
  ## else
    f = modf_f64(x, &i)
  ## end
  return i, f
end

local function math_tointeger(x: auto) <inline,nosideeffect>
  ## if symbols.x.type:is_integral() then
    return (@integer)(x)
  ## elseif symbols.x.type:is_float() then
    local r = (@integer)(x)
    if likely(x == r) then
      return r
    else
      return nil
    end
  ## else
    return nil
  ## end
end

local function math_type(x: auto) <inline,nosideeffect>
  ## if symbols.x.type:is_float() then
    return 'float'
  ## elseif symbols.x.type:is_integral() then
    return 'integer'
  ## else
    return nil
  ## end
end

local function math_ult(m: auto, n: auto): boolean <inline>
  ## check_arithmetic(symbols.m, symbols.n)
  ## if symbols.m.type:is_integral() and symbols.n.type:is_integral() then
    return (@uinteger)(m) < (@uinteger)(n)
  ## elseif symbols.x.type:is_float() then
    local mi, ni = (@integer)(m), (@integer)(n)
    if likely(mi == m and ni == n) then
      return (@uinteger)(mi) < (@uinteger)(ni)
    else
      panic('math_ult: m or n has no integer representation')
    end
  ## end
end

-- Pseudo Random Number Generator based on xoshiro256**
local xoshiro256 = @record{state: uint64[4]}

local function rotl(x: uint64, n: int32) <inline,nosideeffect>
  return (x << n) | (x >> (64 - n))
end

function xoshiro256:nextrand(): uint64
  local state: uint64[4] = {
    self.state[0],
    self.state[1],
    self.state[2] ~ self.state[0],
    self.state[3] ~ self.state[1]
  }
  local res = rotl(state[1] * 5, 7) * 9
  self.state[0] = state[0] ~ state[3]
  self.state[1] = state[1] ~ state[2]
  self.state[2] = state[2] ~ (state[1] << 17)
  self.state[3] = rotl(state[3], 45)
  return res
end

function xoshiro256:random(): float64
  local FLOAT64_MANT_DIGS <comptime> = 53
  local rv = self:nextrand()
  local v = rv >> (64_i32 - FLOAT64_MANT_DIGS)
  return v / (1_uint64 << FLOAT64_MANT_DIGS)
end

function xoshiro256:seed(a: uint64, b: uint64)
  self.state[0] = a
  self.state[1] = 0xff
  self.state[2] = b
  self.state[3] = 0
  for i=0,<16 do
    self:nextrand()
  end
end

-- pre initialize default random generator
local default_random = xoshiro256{state={
  0x65CE039BAEBE74B4, 0x4911ADA153B51EEF, 0xFB71FBB497C00950, 0xF83CCF6AC1B74755
}}

local function math_randomseed(x: auto) <inline>
  ## check_arithmetic(symbols.x)
  default_random:seed((@uint64)(x), 0)
end

local function math_random(m: auto, n: auto) <inline>
  local r: number = default_random:random()
  ## if not symbols.m.type:is_nil() and not symbols.n.type:is_nil() then
    ## check_arithmetic(symbols.m, symbols.n)
    local low: integer, up: integer = (@integer)(m), (@integer)(n)
    if not likely(low < up) then
      panic("random: interval is empty")
    elseif not likely(low >= 0 or up < math_maxinteger + low) then
      panic("random: interval too large")
    end
    r = r * ((@number)(up - low) + 1.0)
    return (@integer)(r) + low
  ## elseif not symbols.m.type:is_nil() then
    ## check_arithmetic(symbols.m)
    local low: integer = (@integer)(m)
    r = r * (@number)(low)
    return (@integer)(r)
  ## else
    return r
  ## end
end

