global C.thrd_error: cint <const,cimport'thrd_error',cinclude'<threads.h>',nodecl>
global C.thrd_nomem: cint <const,cimport'thrd_nomem',cinclude'<threads.h>',nodecl>
global C.thrd_timedout: cint <const,cimport'thrd_timedout',cinclude'<threads.h>',nodecl>

