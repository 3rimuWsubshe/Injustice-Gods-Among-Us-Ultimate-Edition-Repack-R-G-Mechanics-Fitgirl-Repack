function C.cnd_destroy(COND: *C.cnd_t) <cimport'cnd_destroy',cinclude'<threads.h>',nodecl> end

-- Thread-local storage

function C.tss_create(tss_id: *C.tss_t, destructor: C.tss_dtor_t): cint <cimport'tss_create',cinclude'<threads.h>',nodecl> end
function C.tss_get(tss_id: C.tss_t): pointer <cimport'tss_get',cinclude'<threads.h>',nodecl> end
function C.tss_set(tss_id: C.tss_t, val: pointer): cint <cimport'tss_set',cinclude'<threads.h>',nodecl> end
function C.tss_delete(tss_id: C.tss_t) <cimport'tss_delete',cinclude'<threads.h>',nodecl> end

